<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.5//EN"
        "http://struts.apache.org/dtds/struts-2.5.dtd">

<struts>

    <!-- 配置常量：开发模式，启动 -->
    <constant name="struts.devMode" value="true"/>

    <!--  动态方法调用 -->
    <constant name="struts.enable.DynamicMethodInvocation" value="true"/>

    <!-- 由spring接管struts一些对象 -->
    <constant name="struts.objectFactory" value="spring"/>

    <!-- 分类管理映射 -->
    <package name="struts2demo" extends="struts-default">
        <!-- 关键地方  struts2.5 为了提升安全性，添加了 allomethod 这么个玩意-->
        <global-allowed-methods>regex:.*</global-allowed-methods>
        <!-- name表示映射的路径 -->
        <action name="index">
            <!-- 结果页面 -->
            <result name="success">/index.jsp</result>
        </action>

        <action name="hello" class="com.entor.action.HelloWorldAction" method="execute">
            <result name="success">/WEB-INF/HelloWorld.jsp</result>
        </action>

        <!-- 通配符配置 -->
        <action name="*" class="userAction" method="{1}">
            <result name="logon">/Login.jsp</result>
            <result name="regist">/Register.jsp</result>
            <result name="helloworld" type="redirectAction">hello</result>
        </action>
    </package>

</struts>